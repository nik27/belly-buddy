{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["standard", "prettier", "plugin:react/recommended", "prettier/react", "prettier/standard"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["prettier", "import", "standard"],
  "rules": {
    "prettier/prettier": "error",
    "space-before-function-paren": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
