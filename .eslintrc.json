{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["standard", "prettier", "plugin:react/recommended", "prettier/react", "prettier/standard", "plugin:testing-library/react"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["prettier", "import", "standard", "testing-library"],
  "rules": {
    "prettier/prettier": "error",
    "space-before-function-paren": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": [
        "**/*.test.js",
        "**/*.test.jsx"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
